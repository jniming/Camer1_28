<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/msg_spinner_left"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/cmb_spinner_btn_click"
            android:gravity="center"
            android:hint="开始时间"
            android:maxEms="16"
            android:paddingRight="30dp"
            android:textColor="@color/back"
            android:textSize="16sp"
            ></TextView>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="@color/back"></LinearLayout>


        <TextView
            android:id="@+id/msg_spinner_right"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/cmb_spinner_btn_click"
            android:gravity="center"
            android:hint="终止时间"
            android:maxEms="16"
            android:paddingRight="30dp"
            android:textColor="@color/back"
            android:textSize="16sp"
            ></TextView>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/onece_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/time_task_item_bg"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="仅此一次"
            android:textColor="@color/back"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/onece_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/chose"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_2"></LinearLayout>

    <FrameLayout
        android:id="@+id/day_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/time_task_item_bg"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="每天"
            android:textColor="@color/back"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/day_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/chose"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_2"></LinearLayout>


</LinearLayout>